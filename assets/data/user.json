{
  "type": "page",
  "body": [
    {
      "type": "crud",
      "name": "crud",
      "api": "/portal/r/jd/users",
      "loadDataOnce": true,
      "autoFillHeight": true,
      "autoGenerateFilter": true,
      "syncLocation": true,
      "perPage": 10,
      "className": "p-3",
      "headerToolbar": [
        "reload",
        {
          "type": "button",
          "label": "新建",
          "level": "primary",
          "actionType": "drawer",
          "drawer": {
            "position": "left",
            "size": "lg",
            "title": "新建",
            "body": {
              "type": "form",
              "name": "sample-edit-form",
              "api": "post:/portal/r/jd/user",
              "body": [
                {
                  "type": "input-text",
                  "name": "name",
                  "label": "用户名",
                  "required": true
                },
                {
                  "type": "divider"
                },
                {
                  "type": "input-password",
                  "name": "password",
                  "label": "密码",
                  "required": true
                },
                {
                  "type": "divider"
                },
                {
                  "type": "select",
                  "name": "role",
                  "label": "用户角色",
                  "required": true,
                  "options": [
                    "Reporter",
                    "Developer",
                    "Maintainer",
                    "Owner",
                    "Admin"
                  ]
                },
                {
                  "type": "divider"
                }
              ]
            }
          }
        }
      ],
      "columns": [
        {
          "name": "id",
          "width": 200,
          "label": "ID",
          "sortable": true,
          "type": "text",
          "toggled": true,
          "remark": "唯一标识"
        },
        {
          "name": "name",
          "label": "用户名",
          "sortable": true,
          "type": "text",
          "toggled": true,
          "searchable": {
            "type": "input-text",
            "name": "name",
            "label": "用户名",
            "placeholder": "输入用户名",
            "mode": "horizontal"
          }
        },
        {
          "name": "role",
          "label": "系统角色",
          "sortable": true,
          "type": "text",
          "toggled": true,
          "searchable": {
            "type": "select",
            "name": "role",
            "label": "用户角色",
            "options": [
              "Reporter",
              "Developer",
              "Maintainer",
              "Owner",
              "Admin"
            ]
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "width": 100,
          "buttons": [
            {
              "type": "button",
              "icon": "fa fa-eye",
              "actionType": "dialog",
              "tooltip": "查看",
              "dialog": {
                "title": "查看",
                "body": {
                  "type": "form",
                  "body": [
                    {
                      "type": "static",
                      "name": "id",
                      "label": "Id"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "static",
                      "name": "name",
                      "label": "用户名"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "static",
                      "name": "role",
                      "label": "用户角色"
                    },
                    {
                      "type": "divider"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-pencil",
              "tooltip": "编辑",
              "actionType": "drawer",
              "drawer": {
                "position": "left",
                "size": "lg",
                "title": "编辑",
                "body": {
                  "type": "form",
                  "name": "sample-edit-form",
                  "api": "put:/portal/r/jd/user/$id",
                  "body": [
                    {
                      "type": "input-text",
                      "name": "name",
                      "label": "用户名",
                      "disabled": true,
                      "required": true
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "input-password",
                      "name": "password",
                      "label": "新密码"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "select",
                      "name": "role",
                      "label": "用户角色",
                      "required": true,
                      "options": [
                        "Reporter",
                        "Developer",
                        "Maintainer",
                        "Owner",
                        "Admin"
                      ]
                    },
                    {
                      "type": "divider"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-times text-danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "您确认要删除?",
              "api": "delete:/portal/r/jd/user/$id"
            }
          ],
          "toggled": true
        }
      ]
    }
  ]
}
